<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="sequence" invisible="1"/>
                           <!-- <field name="name" string="Nombre"/> -->
                            <field name="contact_id" string="Contacto"/>
                            <field name="phone" readonly="1"/> <!-- Teléfono relacionado, solo lectura -->
                            <field name="email" readonly="1"/> <!-- Correo electrónico relacionado, solo lectura -->
                            <field name="nacimiento"/><!-- Campo de Fecha de Nacimiento -->
                            <field name="age" readonly="1"/> <!-- Edad calculada basada en la Fecha de Nacimiento -->
                            <field name="gender"/>
                            <field name="peso" />
                            <field name="altura" />
                            <field name="imc" readonly="1" />
                            <field name="antecedentes_personales" />
                            <field name="medicamentos_actuales" widget="many2many_tags" />
                            <field name="fuma" />
                            <field name="alcohol" />
                            <field name="drogas" />
                            <field name="cocina_lena" />
                            <field name="vacunas" />
                            <field name="antecedentes_heredofamiliares" />
                            <field name="antecedentes_quirurgicos" />
                            <field name="sexualmente_activo" />
                            <field name="metodo_planificacion" />
                            <field name="numero_embarazos" />
                            <field name="numero_partos" />
                            <field name="numero_abortos" />
                            <field name="numero_cesareas" />
                            <field name="fecha_ultima_citologia" />
                     
                           <!--  <field name="email"/> -->
                        </group>                       
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <tree>
                    <!--  <field name="name"/> -->
                    <field name="age"/>
                    <field name="gender"/>
                     <!-- <field name="email"/> -->
                </tree>
            </field>
        </record>

