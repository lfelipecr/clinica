<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia para Pacientes -->
        <record id="sequence_hospital_patient" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">hospital.patient</field>
            <field name="prefix">PA-</field>
            <field name="padding">3</field>
        </record>

        <!-- Secuencia para Citas Clínicas -->
        <record id="sequence_clinica_cita" model="ir.sequence">
            <field name="name">Clinic Appointment Sequence</field>
            <field name="code">clinica.cita</field>
            <field name="prefix">CITA-</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Secuencia para Consultas Médicas -->
        <record id="sequence_clinica_consulta" model="ir.sequence">
            <field name="name">Clinic Consultation Sequence</field>
            <field name="code">clinica.consulta</field>
            <field name="prefix">CONS-</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Secuencia para Recetas Médicas -->
        <record id="sequence_clinica_receta" model="ir.sequence">
            <field name="name">Clinic Prescription Sequence</field>
            <field name="code">clinica.receta</field>
            <field name="prefix">REC-</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <record id="sequence_clinica_examen" model="ir.sequence">
            <field name="name">Examen Sequence</field>
            <field name="code">clinica.examen</field>
            <field name="prefix">EXAM-</field>
            <field name="padding">5</field>
        </record>
    </data>
</odoo>
